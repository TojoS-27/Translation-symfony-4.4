{% extends 'base.html.twig' %}

{% block title %}{{ 'user.list'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'user.list'|trans }}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>{{'user.lastname'|trans}}</th>
                    <th>{{'user.firstname'|trans}}</th>
                    <th>{{'user.email'|trans}}</th>
                    <th>{{'user.address'|trans}}</th>
                    <th>{{'user.biography'|trans}}</th>
                    <th>{{'user.action'|trans}}</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.lastname|upper }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.biography }}</td>
                    <td>
                        <a class="btn btn-primary" title="{{'user.show'|trans}}" href="{{ path('user_show', {'id': user.id}) }}"><i class='far fa-address-card'></i></a>
                        <a  class="btn btn-success" title="{{'user.edit'|trans}}" href="{{ path('user_edit', {'id': user.id}) }}"><i class="material-icons" style="font-size:16px">&#xe22b;</i></a>
                        <a  class="btn btn-danger" title="{{'user.delete'|trans}}" href="{{ path('user_delete', {'id': user.id}) }}"><i class="fa fa-trash" style="font-size:16px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">{{'no_records_found'|trans}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary"  href="{{ path('user_new') }}">
            <span style="font-size:24px" >
                <i class="material-icons">&#xe7fe;</i>
            </span>
            {{'user.create'|trans}}
        </a>
    </div>
{% endblock %}
