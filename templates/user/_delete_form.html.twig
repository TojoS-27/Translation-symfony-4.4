<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('{{'user.del_modal'|trans}}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
  	<button class="btn btn-danger">{{ 'user.delete'|trans }}</button>
    <a class="btn btn-primary" href="{{ path('user_index') }}">{{ 'back'|trans }}</a>
</form>
